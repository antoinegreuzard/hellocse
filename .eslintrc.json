{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "plugin:vue/vue3-recommended",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended",
        "prettier"
    ],
    "parser": "vue-eslint-parser",
    "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "vue",
        "@typescript-eslint"
    ],
    "rules": {
        "vue/multi-word-component-names": "off"
    },
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                    [
                        "@",
                        "./resources/js"
                    ]
                ],
                "extensions": [
                    ".js",
                    ".ts",
                    ".vue"
                ]
            }
        }
    },
    "globals": {
        "route": "readonly"
    }
}
