{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "plugin:vue/vue3-essential",
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "vue/multi-word-component-names": "off"
    },
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                    [
                        "@",
                        "./resources/js"
                    ]
                ],
                "extensions": [
                    ".js",
                    ".vue"
                ]
            }
        }
    },
    "globals": {
        "route": "readonly"
    }
}